{% extends 'base.html.twig' %}

{% block content %}

    {% for notification in notifications %}

        <div class="row justify-content-center notification-template">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-2">
                                <h4>{{ notification.user }}</h4>
                            </div>
                            <div class="col-sm-6 offset-sm-1">
                                <h4>{{ notification.description }}</h4>
                            </div>
                            <div class="col-sm-3">
                                <h4>{{ notification.date|date("d M - H:i") }}</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}

{% endblock %}